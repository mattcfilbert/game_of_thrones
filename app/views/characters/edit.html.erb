<h2>Disguise Character</h2>

<%= form_for [@house, @character] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :img_url %>
  <%= f.text_field :img_url %>

  <%= f.submit "Disguise" %>
<% end %>

<%= form_for [@house, @character], method: :delete do |f| %>
  <%= f.submit "#{@house.sentence}", class: "delete"%>
<% end %>
